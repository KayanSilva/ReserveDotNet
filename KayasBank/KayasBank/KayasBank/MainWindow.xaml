<Window x:Class="KayasBank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KayasBank"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <ListBox Width="270" Height="290" Canvas.Top="15" Canvas.Left="15">
            
        </ListBox>
        <StackPanel Canvas.Top="15" Canvas.Left="290">
            <TextBlock FontWeight="Bold">Number</TextBlock>
            <TextBlock Name="txtNumber"></TextBlock>
            <TextBlock FontWeight="Bold">Name</TextBlock>
            <TextBlock Name="txtName"></TextBlock>
            <TextBlock FontWeight="Bold">Telephone</TextBlock>
            <TextBlock Name="txtTelephone"></TextBlock>
            <TextBlock FontWeight="Bold">Decription</TextBlock>
            <TextBlock Name="txtDescription"></TextBlock>
            <TextBlock FontWeight="Bold">Address</TextBlock>
            <TextBlock Name="txtAddress"></TextBlock>
        </StackPanel>
    </Canvas>
</Window>
